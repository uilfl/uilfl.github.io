---
import "../styles/global.css";

interface Props {
  title: string;
  activeTab: "about" | "research" | "cv";
}

const { title, activeTab } = Astro.props;

const navItems = [
  { label: "About", href: "/" },
  { label: "Research", href: "/research" },
  { label: "CV", href: "/cv" },
];
---

<!doctype html>
<!-- Rest of your HTML remains the same -->
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width" />
  <meta name="description" content="Personal academic website" />
  <title>{title}</title>
</head>
<body>
  <nav>
    <div class="nav-links">
      {
        navItems.map((item) => (
          <a
            href={item.href}
            class={
              activeTab === item.href.replace("/", "") ||
              (item.href === "/" && activeTab === "about")
                ? "active"
                : ""
            }>
            {item.label}
          </a>
        ))
      }
    </div>
  </nav>
  <main>
    <slot />
  </main>
  <footer>
    <p>Â© {new Date().getFullYear()} Your Name</p>
  </footer>
</body>
