---
import "../../public/styles/globals.css"; // Global styles
interface Props {
  title: string;
  activeTab: "about" | "research" | "cv";
}

const { title, activeTab } = Astro.props;

const navItems = [
  { label: "About", href: "/" },
  { label: "Research", href: "/research" },
  { label: "CV", href: "/cv" },
];
---

---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <link rel="stylesheet" href="/styles.css" />
  </head>
  <body class="min-h-screen bg-background font-sans antialiased">
    <div class="container mx-auto px-4 max-w-4xl">
      <header class="sticky top-0 z-40 w-full border-b bg-white">
        <div class="flex h-16 items-center justify-between py-4">
          <nav class="flex items-center space-x-4 lg:space-x-6">
            <a
              href="/"
              class="text-2xl font-bold tracking-tight
              text-primary hover:text-primary/80">
              Your Name
            </a>
            <nav class="flex items-center space-x-4 lg:space-x-6">
              {
                navItems.map((item) => (
                  <a
                    href={item.href}
                    class={`text-sm font-medium transition-colors 
                    hover:text-primary 
                    ${
                      activeTab ===
                      (item.href === "/" ? "about" : item.href.replace("/", ""))
                        ? "text-primary"
                        : "text-muted-foreground"
                    }`}>
                    {item.label}
                  </a>
                ))
              }
            </nav>
          </nav>
        </div>
      </header>

      <main class="py-8">
        <slot />
      </main>

      <footer class="border-t py-6 text-center">
        <p class="text-sm text-muted-foreground">
          Â© {new Date().getFullYear()} Your Name. All rights reserved.
        </p>
      </footer>
    </div>
  </body>
</html>
